<body>
<p id="notice"></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <span>
    <%= link_to book.title, book_path(book.id) %>
    </span>
    <% end %>
  </tbody>
</table>
<h2>New book</h2>