<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

<div class="form">
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>
</div>

<%= f.submit 'Update Book' %>

<% end %>

<p><%= link_to "Show", @book %> | <%= link_to "Back", '/books' %></p>